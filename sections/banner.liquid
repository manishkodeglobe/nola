<div class="flexslider  ">
  <ul class="slides flex items-center">


    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'image' %}
        <li>
          {% if block.settings.image %}

            <img
              src="{{ block.settings.image | image_url }}"
              width="full"
              height="full"
              loading="lazy" />
          {% else %}
            <div class="flex items-center justify-center">
              <div>
                <h1 class="text-3xl font-bold">No Images Added in Crauosal</h1>
              </div>
            </div>

          {% endif %}

        </li>

      {% else %}
        {{ 'lifestyle-2' | placeholder_svg_tag }}

      {% endcase %}

    {% endfor %}



  </ul>
</div>



{% schema %}
  {
    "name": "BannerHomePage",

    "blocks": [
      {
        "type": "image",
        "name": "image_block",
        "limit": 6,
        "settings": [
          {
            "type": "image_picker",
            "label": "Banner Slides",
            "id": "image"
          }
        ]
      }
    ]



  }
{% endschema %}