<div class="container mx-auto">
  <div class="card_wrapper  grid grid-cols-3 gap-10">
    {% assign collection_handle = 'bags' %}
    {% assign collection_for_bag = collections[collection_handle] %}
    {% for product in collection_for_bag.products %}
      <div class="card overflow-hidden w-full">
        <img
          class="w-full h-full object-cover"
          src="{{ product.featured_image | image_url }}"
          width="full"
          height="auto"
          loading="lazy">
        <div class="specific_product_details">
          <h2>{{ product.title }}</h2>
          <p>{{ product.description }}</p>
          <p>Price: {{ product.price | money }}</p>
          <a href="{{ product.url }}">View Product</a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>