<div class="list_collections_section">

  <div class="container mx-auto">
    <div class="flex flex-col py-9 items-center">
      <h1 class="text-3xl font-medium">{{ section.settings.title }}</h1>
      <div class="max-w-7xl mx-auto my-3">
        <div class="grid grid-cols-1 md:grid-cols-1 gap-3">
          {% for collection in collections %}
            {% if collection.all_products_count >= 0 %}
              <div class="w-full py-6 px-3" data-section="{{ section.id }}">
                <div class="">
                  <a href="{{ collection.url }}">
                    {% comment %} <div class="h-80 overflow-hidden"> {% endcomment %}
                    <div class="collection-image_directions {{ section.id }}-{{ forloop.index0 }}">
                      {% if collection.featured_image != blank %}
                        {% assign collection_image = collection.featured_image %}
                      {% else %}
                        {% assign collection_image = collections.products.first.image %}
                      {% endif %}

                      <img
                        class="    "
                        src="{{ collection_image | image_url }}"
                        height="full"
                        width="full"
                        loading="lazy">
                      <div class="  p-6">
                        <h1 class="text-xl">{{ collection.title }}</h1>
                      </div>
                    </div>
                  </a>
                </div>
              </div>
            {% else %}
              <div class="flex items-center justify-center">
                <h1 class="text-7xl">Sorry No Collections Found!ðŸ¥º</h1>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "List Collections",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Collections"

      }, {
        "type": "collection_list",
        "id": "collection_lists",
        "label": "all collections list"
      }
    ]
  }
{% endschema %}